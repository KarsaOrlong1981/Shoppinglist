<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:Shoppinglist.ViewModels" x:DataType="viewmodels:BuildYourShopViewModel"
             x:Class="Shoppinglist.Views.BuildYourShopView">
    <Grid x:Name="grid">
        <ScrollView >
            <StackLayout  x:Name="stack">
